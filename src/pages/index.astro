            <i class="fas fa-id-card text-gold text-2xl"></i>
          </div>
          <h4 class="text-gold font-semibold mb-1">Receive Membership Card</h4>
          <p class="text-white text-sm">Get personalized Elite access card</p>
        </div>

        <!-- Arrow -->
        <div class="hidden md:block text-gold text-xl">
          <i class="fas fa-arrow-right"></i>
        </div>
        <div class="md:hidden text-gold text-xl my-2">
          <i class="fas fa-arrow-down"></i>
        </div>

        <!-- Step 4 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-gold/10 border-2 border-gold/30 rounded-full flex items-center justify-center mx-auto mb-3">
            <i class="fas fa-dumbbell text-gold text-2xl"></i>
          </div>
          <h4 class="text-gold font-semibold mb-1">Start Training</h4>
          <p class="text-white text-sm">Begin transformation journey</p>
