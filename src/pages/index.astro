      </div>
    </div>
  </section>

  <!-- Journey Steps Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-4">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-gold/10 border-2 border-gold/30 rounded-full flex items-center justify-center mx-auto mb-3">
            <i class="fas fa-box-open text-gold text-2xl"></i>
          </div>
          <h4 class="text-gold font-semibold mb-1">Choose Your Plan</h4>
          <p class="text-white text-sm">Select membership that fits your goals</p>
        </div>

        <!-- Arrow -->
        <div class="hidden md:block text-gold text-xl">
          <i class="fas fa-arrow-right"></i>
        </div>
        <div class="md:hidden text-gold text-xl my-2">
          <i class="fas fa-arrow-down"></i>
        </div>

        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-gold/10 border-2 border-gold/30 rounded-full flex items-center justify-center mx-auto mb-3">
            <i class="fas fa-clipboard-check text-gold text-2xl"></i>
          </div>
          <h4 class="text-gold font-semibold mb-1">Complete Registration</h4>
          <p class="text-white text-sm">Quick sign-up & payment process</p>
        </div>

