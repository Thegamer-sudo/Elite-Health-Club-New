<style>
  /* ========== ANIMATIONS ========== */
  @keyframes floatUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  /* Hero animations */
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: float 6s ease-in-out infinite 0.5s;
  }
  
  .animate-float-delayed-2 {
    animation: float 6s ease-in-out infinite 1s;
  }
  
  /* Scroll animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }
  
  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Step animations */
  .step-animate {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.2s forwards;
  }
  
  .step-animate-delayed {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.4s forwards;
  }
  
  .step-animate-delayed-2 {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.6s forwards;
  }
  
  .step-animate-delayed-3 {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.8s forwards;
  }
  
  /* Arrow animations */
  .arrow-animate {
    opacity: 0;
    animation: floatUp 0.6s ease-out 0.3s forwards;
  }
  
  .arrow-animate-delayed {
    opacity: 0;
    animation: floatUp 0.6s ease-out 0.5s forwards;
  }
  
  .arrow-animate-delayed-2 {
    opacity: 0;
    animation: floatUp 0.6s ease-out 0.7s forwards;
  }
  
  /* Card animations */
  .branch-card {
    opacity: 0;
    transform: translateY(30px);
  }
  
  .animate-card {
    animation: floatUp 0.6s ease-out 0.3s forwards;
  }
  
  .animate-card-delayed {
    animation: floatUp 0.6s ease-out 0.5s forwards;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    /* TIGHTEN HERO SECTION */
    .min-h-\[80vh\] {
      min-height: 70vh !important;
    }
    
    .min-h-\[80vh\] h1 {
      font-size: 2.5rem !important;
      margin-bottom: 0.5rem !important;
      line-height: 1.1 !important;
    }
    
    .min-h-\[80vh\] h2 {
      font-size: 1.1rem !important;
      margin-bottom: 1.5rem !important;
    }
    
    /* MINIMAL SPACE - Hero to Description */
    .pt-2.pb-6.-mt-16 {
