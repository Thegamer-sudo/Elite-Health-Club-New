<style>
  /* ========== ANIMATIONS ========== */
  @keyframes floatUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  /* Hero animations */
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: float 6s ease-in-out infinite 0.5s;
  }
  
  .animate-float-delayed-2 {
    animation: float 6s ease-in-out infinite 1s;
  }
  
  /* Scroll animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }
  
  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Step animations */
  .step-animate {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.2s forwards;
  }
  
  .step-animate-delayed {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.4s forwards;
  }
  
  .step-animate-delayed-2 {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.6s forwards;
  }
  
  .step-animate-delayed-3 {
    opacity: 0;
    transform: translateY(20px);
    animation: floatUp 0.6s ease-out 0.8s forwards;
  }
  
  /* Arrow animations */
  .arrow-animate {
    opacity: 0;
    animation: floatUp 0.6s ease-out 0.3s forwards;
  }
  
  .arrow-animate-delayed {
    opacity: 0;
    animation: floatUp 0.6s ease-out 0.5s forwards;
  }
  
  .arrow-animate-delayed-2 {
    opacity: 0;
    animation: floatUp 0.6s ease-out 0.7s forwards;
  }
  
  /* Card animations */
  .branch-card {
    opacity: 0;
    transform: translateY(30px);
  }
  
  .animate-card {
    animation: floatUp 0.6s ease-out 0.3s forwards;
  }
  
  .animate-card-delayed {
    animation: floatUp 0.6s ease-out 0.5s forwards;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .min-h-screen h1 {
      font-size: 3.5rem !important;
      margin-bottom: 1rem !important;
    }
    
    .min-h-screen h2 {
      font-size: 1.5rem !important;
      margin-bottom: 2rem !important;
    }
    
    /* SIGNIFICANTLY REDUCED SPACE - Hero to Description */
    .py-8.-mt-12 {
      margin-top: -4rem !important; /* Increased negative margin */
      padding-top: 1rem !important; /* Reduced padding */
    }
    
    /* Larger description font size on mobile */
    .text-2xl.md\\:text-3xl {
      font-size: 1.5rem !important; /* Increased from 1.25rem */
      line-height: 1.7 !important;
    }
    
    .text-xl {
      font-size: 1.2rem !important;
    }
    
    .text-lg {
      font-size: 1.1rem !important;
    }
    
    /* Adjust card padding */
    .branch-card {
      padding: 1.5rem !important;
    }
  }
  
  /* Desktop optimizations */
  @media (min-width: 769px) {
    .py-8.-mt-12 {
      margin-top: -6rem !important; /* Even closer on desktop */
    }
  }
</style>

<script is:inline>
  // Video player functionality
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.getElementById('training-video');
    const playOverlay = document.getElementById('play-overlay');
    
    if (video && playOverlay) {
      // Click overlay to play
      playOverlay.addEventListener('click', function() {
        video.play();
        playOverlay.style.display = 'none';
      });
      
      // Click video to play/pause
      video.addEventListener('click', function() {
        if (video.paused) {
          video.play();
          playOverlay.style.display = 'none';
        } else {
          video.pause();
          playOverlay.style.display = 'flex';
        }
      });
      
      // Show overlay when video ends
      video.addEventListener('ended', function() {
        playOverlay.style.display = 'flex';
      });
      
      // Show overlay when video pauses
      video.addEventListener('pause', function() {
        playOverlay.style.display = 'flex';
      });
    }
    
    // Scroll animations
    const animateOnScroll = () => {
      const elements = document.querySelectorAll('.animate-on-scroll');
      
      elements.forEach(element => {
        const elementTop = element.getBoundingClientRect().top;
        const elementVisible = 150;
        
        if (elementTop < window.innerHeight - elementVisible) {
          element.classList.add('visible');
        }
      });
    };
    
    // Initial check
    animateOnScroll();
    
    // Check on scroll
    window.addEventListener('scroll', animateOnScroll);
    
    // Mobile menu fix
    const navbarToggle = document.querySelector('.navbar-toggler');
    const navbarCollapse = document.querySelector('.navbar-collapse');
    
    if (navbarToggle && navbarCollapse) {
      navbarToggle.addEventListener('click', function() {
        navbarCollapse.classList.toggle('show');
      });
      
      // Close menu when clicking outside on mobile
      document.addEventListener('click', function(event) {
        if (window.innerWidth <= 768 && 
            !event.target.closest('.navbar') && 
            navbarCollapse.classList.contains('show')) {
          navbarCollapse.classList.remove('show');
        }
      });
    }
  });
</script>