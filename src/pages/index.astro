      </div>
    </div>
  </section>

  <!-- Membership Card Section -->
  <section class="py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-montserrat font-bold text-3xl md:text-4xl text-text-light mb-4">
        Your Elite Membership Card
      </h2>
      <p class="text-text-light mb-8">Personalized access with premium benefits</p>
      
      <!-- Membership Card -->
      <div class="max-w-md mx-auto">
        <div class="bg-darker-bg border-2 border-gold/30 rounded-xl p-6 relative overflow-hidden">
          <!-- Card Background -->
          <div class="absolute inset-0 bg-[url('/images/gym-main.jpg')] bg-cover opacity-10"></div>
          
          <!-- Card Content -->
          <div class="relative z-10">
            <!-- Card Header -->
            <div class="flex justify-between items-center mb-8">
              <div class="font-montserrat font-extrabold text-gold text-2xl">ELITE</div>
