    </div>
  </section>

  <!-- Video Section -->
  <section class="py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-montserrat font-bold text-3xl md:text-4xl text-text-light mb-4">
        Elite Training Experience
      </h2>
      <p class="text-text-light mb-8">Professional workouts & techniques</p>
      
      <!-- Single Video -->
      <div class="max-w-2xl mx-auto">
        <div class="bg-darker-bg border border-gold/20 rounded-xl overflow-hidden">
          <!-- Video Container -->
          <div class="relative group">
            <video 
              id="training-video"
              class="w-full h-64 md:h-80 object-cover cursor-pointer"
              controls
              playsinline
              preload="metadata"
            >
              <source src="/videos/workout2.mp4" type="video/mp4">
              Your browser does not support the video tag.
            </video>
            
            <!-- Custom Play Button (optional) -->
            <div id="play-overlay" class="absolute inset-0 flex items-center justify-center bg-black/40 group-hover:bg-black/30 transition-all cursor-pointer">
              <div class="w-20 h-20 bg-gold/90 rounded-full flex items-center justify-center transform group-hover:scale-110 transition-transform">
                <i class="fas fa-play text-white text-3xl ml-1"></i>
              </div>
            </div>
          </div>
          
          <!-- Video Caption -->
          <div class="p-6">
            <h5 class="text-gold text-xl font-semibold mb-2">Deadlift Party</h5>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-montserrat font-bold text-3xl md:text-4xl text-text-light mb-4">
        Ready to Transform?
      </h2>
      <p class="text-text-light text-xl mb-8">Start your Elite journey today</p>
      
      <!-- Contact Buttons -->
      <div class="flex flex-col md:flex-row gap-4 justify-center max-w-2xl mx-auto">
        <!-- WhatsApp Button -->
        <a href="https://wa.me/27655172764" 
           target="_blank"
           class="bg-gold text-dark-bg font-bold text-lg px-8 py-4 rounded-lg hover:bg-gold-dark transition-colors flex items-center justify-center transform hover:scale-105 transition-transform duration-300">
          <i class="fab fa-whatsapp mr-3 text-2xl"></i>
          Chat on WhatsApp
        </a>
        
        <!-- Call Button -->
        <a href="tel:+27655172764"
           class="border-2 border-gold text-gold font-bold text-lg px-8 py-4 rounded-lg hover:bg-gold hover:text-dark-bg transition-colors flex items-center justify-center transform hover:scale-105 transition-transform duration-300">
          <i class="fas fa-phone mr-3 text-2xl"></i>
          Call Now
        </a>
      </div>
    </div>
  </section>
</Main>

<script is:inline>
  // Simple video player functionality
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.getElementById('training-video');
    const playOverlay = document.getElementById('play-overlay');
    
    if (video && playOverlay) {
      // Click overlay to play
      playOverlay.addEventListener('click', function() {
        video.play();
        playOverlay.style.display = 'none';
      });
      
      // Click video to play/pause
      video.addEventListener('click', function() {
        if (video.paused) {
          video.play();
          playOverlay.style.display = 'none';
        } else {
          video.pause();
          playOverlay.style.display = 'flex';
        }
      });
      
      // Show overlay when video ends
      video.addEventListener('ended', function() {
        playOverlay.style.display = 'flex';
      });
      
      // Show overlay when video pauses
      video.addEventListener('pause', function() {
        playOverlay.style.display = 'flex';
      });
    }
  });
</script>