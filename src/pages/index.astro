              <div class="w-16 h-16 border-2 border-gold/50 rounded-full flex items-center justify-center">
                <i class="fas fa-dumbbell text-gold text-2xl"></i>
              </div>
              
              <!-- Member Info -->
              <div class="text-left">
                <div class="text-text-light font-bold text-xl">YOUR NAME</div>
