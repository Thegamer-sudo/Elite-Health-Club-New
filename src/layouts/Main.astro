---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Chatbot from '../components/Chatbot.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#D4AF37">
  <title>Elite Health Club</title>
  
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <!-- FAVICONS - SIMPLE ICO ONLY -->
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  
  <!-- Open Graph for Google/Social -->
  <meta property="og:image" content="/images/elite-logo.png">
  <meta property="og:image:alt" content="Elite Health Club Logo">
</head>
<body class="min-h-screen bg-black">
  <Header />
  
  <main class="pt-20">
    <slot />
  </main>
  
  <Footer />
  <Chatbot />
</body>
</html>